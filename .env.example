# --- General Mautic Settings ---
MAUTIC_ENV=prod
MAUTIC_SECRET=your_random_secret_key_here
MAUTIC_VERSION=6.0.0

# --- Database Settings ---
DB_HOST=your_db_host
DB_PORT=3306
DB_NAME=mautic_db
DB_USER=mautic_user
DB_PASSWORD=your_db_password_here

# --- Mailer Settings ---
MAILER_TRANSPORT=smtp
MAILER_HOST=smtp.yourmailserver.com
MAILER_PORT=587
MAILER_ENCRYPTION=tls
MAILER_USER=your_smtp_user
MAILER_PASSWORD=your_smtp_password
MAILER_FROM=your_email@example.com

# --- Cache Settings ---
CACHE_DRIVER=redis
CACHE_HOST=redis_host
CACHE_PORT=6379
CACHE_PREFIX=mautic_

# --- Session Settings ---
SESSION_HANDLER=redis
SESSION_SAVE_PATH=redis_host:6379

# --- Filesystem ---
FILESYSTEM_DRIVER=local
FILESYSTEM_ROOT_PATH=/var/www/html/uploads

# --- Web Settings ---
MAUTIC_URL=https://your-mautic-domain.com

# --- Additional Configuration ---
MOUNT_TMP_DIR=/tmp
